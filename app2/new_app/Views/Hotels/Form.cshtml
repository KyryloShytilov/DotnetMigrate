@model HotelViewModel
@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

<form asp-controller="Hotels" asp-action="Save" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    @if (Model.Id.HasValue)
    {
        <input type="hidden" asp-for="Id" />
    }
    
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="CountryId" class="form-label"></label>
        <select asp-for="CountryId" class="form-select" asp-items="@(new SelectList(Model.Countries, "Id", "Name"))">
            <option value="">-- Select Country --</option>
        </select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
        <a asp-controller="Hotels" asp-action="NewCountryForm" class="btn btn-sm btn-secondary mt-2">Add New Country</a>
    </div>
    
    <div class="mb-3">
        <label asp-for="City" class="form-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Stars" class="form-label"></label>
        <input asp-for="Stars" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Stars" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="PricePerNight" class="form-label"></label>
        <input asp-for="PricePerNight" class="form-control" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>
    
    <div class="form-check mb-3">
        <input asp-for="IsAllInclusive" class="form-check-input" />
        <label asp-for="IsAllInclusive" class="form-check-label"></label>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Hotels" asp-action="List" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}